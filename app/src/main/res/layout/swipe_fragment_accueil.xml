<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fragment_accueil_shape"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="110dp"
    android:layout_marginBottom="110dp"

    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/niveau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Niveau"
        android:textColor="#000"
        android:textSize="19sp"

        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/titre_musique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""


        android:textColor="@color/vert"
        android:textSize="18sp"
        android:layout_below="@id/niveau"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        android:ellipsize="marquee"
        android:singleLine="true"
        android:marqueeRepeatLimit ="marquee_forever"
        android:scrollHorizontally="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:duplicateParentState="true"/>


    <TextView
        android:id="@+id/numeroNiveau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textColor="@color/vert"
        android:textSize="80sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doigts d'or : "
        android:textStyle="italic"
       android:layout_below="@id/numeroNiveau"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="15dp"
        android:textColor="#ffa000"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/scoreOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@id/text2"
        android:layout_toRightOf="@id/text2"
        android:textColor="#ffa000"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doigts d'argent : "
        android:layout_below="@id/text2"
        android:layout_marginBottom="2dp"
        android:textStyle="italic"
        android:layout_marginLeft="15dp"
        android:textColor="#bdc3c7"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/scoreArgent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text3"

        android:layout_toRightOf="@id/text3"
        android:textColor="#bdc3c7"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Doigts de bronze : "
        android:layout_below="@id/text3"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="15dp"
        android:textColor="#d35400"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/scoreBronze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text4"

        android:layout_toRightOf="@id/text4"
        android:textColor="#d35400"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meilleur score - "
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:textColor="#000"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/bestscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text1"
        android:textColor="#000"
        android:layout_alignBottom="@id/text1"/>
    <TextView
        android:id="@+id/nbTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bestscore"
        android:textColor="#000"
        android:text="/"
        android:layout_alignBottom="@id/bestscore"/>
    <ImageView
        android:id="@+id/trophy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@id/bestscore"
        />

</RelativeLayout>
</RelativeLayout>